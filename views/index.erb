
<h1 class="title">Poetry Recommendation Engine</h1>

<br />

<form action="/submit" method="POST">
<div class="control is-grouped">
	<p class="control is-expanded">
	<input class="input" type="text" name="query" placeholder="Enter Poet Name" />
</p><p class="control">
	<input class="button is-info" type="submit" value="Submit" />
	</p>
</div>
</form>

<br />

<ul>
<% @poems.each do |poem| %>
	<li>
		<a href="poem/<%= poem[:id] %>"> <%= poem[:title] %></a> by <%=poem[:poet] %>
	</li>
<% end %>
</ul>

<p><%= @helper %></p>
